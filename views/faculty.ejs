<%- include('partials/header') %>

<div class="container mt-5">
  <div class="position-relative">
    <div class="authentication-wrapper authentication-basic container-p-y">
      <div class="authentication-inner py-6 mx-4">
        <!-- Faculty Dashboard Card -->
        <div class="card p-7">
          <div class="app-brand justify-content-center mt-5">
            <span class="app-brand-text demo text-heading fw-semibold">🎓 My College - Faculty Dashboard</span>
          </div>
          <div class="card-body mt-1">
            <h4 class="mb-1">Welcome, <%= email %></h4>
            <p class="mb-5">From here, you can manage student marks, view your department details, and see your assigned courses.</p>

            <div class="list-group">
              <a href="/facultyMarks" class="list-group-item list-group-item-action">
                <h5 class="mb-1">Manage Student Marks</h5>
                <p class="mb-1">View and update the marks for your students.</p>
              </a>
              <a href="/enrollCoursesFaculty" class="list-group-item list-group-item-action">
                <h5 class="mb-1">Add or Update Department</h5>
                <p class="mb-1">Add or update the department details.</p>
              </a>
              <a href="/assignedCourses" class="list-group-item list-group-item-action">
                <h5 class="mb-1">View Assigned Courses</h5>
                <p class="mb-1">See the list of courses you are assigned to teach.</p>
              </a>
            </div>
          </div>
          <a href="/faculty" class="btn btn-primary mb-3">Back to Main Menu</a>
        </div>
        <!-- Faculty Dashboard Card -->
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
