<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Delete Course</h1>

  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <p>Are you sure you want to delete the course "<%= course.course_name %>"?</p>
          <form action="/deleteCourse" method="GET">
            <input type="hidden" name="id" value="<%= course.course_id %>">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="/viewCourses" class="btn btn-secondary">Cancel</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
