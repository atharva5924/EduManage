<!doctype html>

<html
  lang="en"
  class="light-style layout-wide customizer-hide"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="../assets/"
  data-template="vertical-menu-template-free"
  data-style="light">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />

    <title>Edit Marks - My College</title>

    <meta name="description" content="" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet" />

    <link rel="stylesheet" href="../assets/vendor/fonts/remixicon/remixicon.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="../assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="../assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="../assets/css/demo.css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
  </head>

  <body>
    <!-- Content -->

    <div class="position-relative">
      <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner py-6 mx-4">
          <!-- Edit Marks Card -->
          <div class="card p-7">
            <div class="app-brand justify-content-center mt-5">
              <span class="app-brand-text demo text-heading fw-semibold">ðŸŽ“ My College - Edit Marks</span>
            </div>
            <div class="card-body mt-1">
              <h4 class="mb-4">Update Marks for <%= mark.first_name %> <%= mark.last_name %></h4>
              
              <!-- Form to edit marks -->
              <form action="/updateMarks/<%= mark.marks_id %>" method="POST">
                
                <!-- Display Student Name (non-editable) -->
                <div class="mb-3">
                  <label for="studentName" class="form-label">Student Name</label>
                  <input
                    type="text"
                    id="studentName"
                    class="form-control"
                    value="<%= mark.first_name %> <%= mark.last_name %>"
                    readonly />
                </div>

                <!-- Display Course Name (non-editable) -->
                <div class="mb-3">
                  <label for="courseName" class="form-label">Course</label>
                  <input
                    type="text"
                    id="courseName"
                    class="form-control"
                    value="<%= mark.course_name %>"
                    readonly />
                </div>

                <!-- Editable Marks Field -->
                <div class="mb-3">
                  <label for="marksObtained" class="form-label">Marks Obtained</label>
                  <input
                    type="number"
                    id="marksObtained"
                    name="marks_obtained"
                    class="form-control"
                    value="<%= mark.marks_obtained %>"
                    required />
                </div>

                <!-- Submit and Cancel Buttons -->
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="/viewMarks" class="btn btn-secondary">Cancel</a>
              </form>
            </div>
          </div>
          <!-- Edit Marks Card -->

          <!-- Image Section -->
          <div class="row">
            <div class="col-4 d-none d-lg-flex justify-content-start">
              <img
                src="../assets/img/illustrations/tree-3.png"
                alt="auth-tree"
                class="authentication-image-object-left" />
            </div>
            <div class="col-4 d-none d-lg-flex justify-content-center">
              <img
                src="../assets/img/illustrations/auth-basic-mask-light.png"
                class="authentication-image"
                height="172"
                alt="triangle-bg"
                data-app-light-img="illustrations/auth-basic-mask-light.png"
                data-app-dark-img="illustrations/auth-basic-mask-dark.png" />
            </div>
            <div class="col-4 d-none d-lg-flex justify-content-end">
              <img
                src="../assets/img/illustrations/tree.png"
                alt="auth-tree"
                class="authentication-image-object-right" />
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Core JS -->
    <script src="../assets/vendor/libs/jquery/jquery.js"></script>
    <script src="../assets/vendor/libs/popper/popper.js"></script>
    <script src="../assets/vendor/js/bootstrap.js"></script>
    <script src="../assets/vendor/libs/node-waves/node-waves.js"></script>
    <script src="../assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="../assets/vendor/js/menu.js"></script>
    <script src="../assets/js/main.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
  </body>
</html>
