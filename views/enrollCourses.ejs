<%- include('partials/header') %>

<div class="container mt-5">
  <div class="position-relative">
    <div class="authentication-wrapper authentication-basic container-p-y">
      <div class="authentication-inner py-6 mx-4">
        <!-- Enroll in Courses Card -->
        <div class="card p-7">
          <div class="app-brand justify-content-center mt-5">
            <span class="app-brand-text demo text-heading fw-semibold">ðŸŽ“ My College - Enroll in Courses</span>
          </div>
          <div class="card-body mt-1">
            <h4 class="mb-1">Available Courses</h4>
            <p class="mb-5">Select a course to enroll in from the list below.</p>

            <form action="/enrollCourses" method="POST">
              <div class="form-group">
                <label for="course">Available Courses</label>
                <select id="course" name="course" class="form-control" required>
                  <option value="">Select a course</option>
                  <% courses.forEach(course => { %>
                    <option value="<%= course.course_id %>"><%= course.course_name %></option>
                  <% }); %>
                </select>
              </div>

              <button type="submit" class="btn btn-primary mt-3">Enroll</button>
            </form>
          </div>
          <a href="/student" class="btn btn-primary mb-3">Back to Dashboard</a>
        </div>
        <!-- Enroll in Courses Card -->
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
