<%- include('partials/header') %>
<div class="container" style="margin-top: 2px;">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4" style="border-bottom: 2px solid #8c57ff;">
    <div class="col-md-3 mb-2 mb-md-0">
      <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
        <img src="../assets/img/favicon/favicon.ico" alt="">
      </a>
    </div>

    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0" style="position: relative;">
      <li class="nav-item"><a href="/viewUsers" class="nav-link px-2 link-secondary">Manage Users</a></li>
      <li class="nav-item"><a href="/viewCourses" class="nav-link px-2 link-body-emphasis">Manage Courses</a></li>
      <li class="nav-item"><a href="/manageDepartments" class="nav-link px-2 link-body-emphasis">Manage Departments</a></li>
      <li class="nav-item"><a href="/viewMarks" class="nav-link px-2 link-body-emphasis">View Marks</a></li>
    </ul>

    <div class="col-md-3 text-end">
      <a href="/login" class="btn btn-outline-primary me-2">Logout</a>
    </div>
  </header>
</div>

<!-- Add this style block for the hover effect, border, and vertical line -->
<style>
/* Hover effect */
.nav-link {
    transition: background-color 0.3s ease, color 0.3s ease;
}

.nav-link:hover {
    background-color: #8c57ff;
    color: white !important;
    border-radius: 5px;
    padding: 8px 12px;
}

/* Purple border for the navbar */
header {
    border-bottom: 2px solid #8c57ff;
}

/* Vertical lines between navbar items */
.nav-item {
    position: relative;
    padding-left: 15px;
    padding-right: 15px;
}

.nav-item:not(:last-child)::after {
    content: "";
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    height: 20px;
    width: 1px;
    background-color: #8c57ff; /* Purple vertical line */
}
</style>



